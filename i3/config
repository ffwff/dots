# Toggle gaps
set $outer 30
set $inner 30

bindsym mod4+o exec --no-startup-id "if [ `i3-msg -t get_tree | grep -Po \
    '.*\\"gaps\\":{\\"inner\\":\K(-|)[0-9]+(?=.*\\"focused\\":true)'` -eq 0 ]; then \
        i3-msg gaps outer current set 0; i3-msg gaps inner current set 0; \
    else \
        i3-msg gaps outer current set $outer; i3-msg gaps inner current set $inner; \
    fi"

# Gaps
gaps outer $outer
gaps inner $inner

for_window [class="^.*"] border pixel 0

